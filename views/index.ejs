<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title%></title>
  <link rel="stylesheet" href="./index.css">
</head>
<body>
  <div class="message__board__container">
    <div class="title__btn">
      <h2><%= title%></h2>
      <a href="/new">Add new message</a>
    </div>
    <div class="messages">
      <% messages.forEach((item) => {%>
        <div class="wrapper__container">
          <div class="author__date__time">
            <h4><%= item.user %></h4>
            <p><%= item.added %></p>
          </div>
          <div class="message__open__btn">
            <p><%= item.text %></p>
            <a href="/message/<%= item.id %>"> Open </a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>